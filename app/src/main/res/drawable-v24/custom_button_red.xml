<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/buttonRed1"
                android:endColor="@color/buttonRed0"
                android:gradientRadius="50dp"
                android:type="radial"
                 />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item >
        <shape>
            <gradient
                android:startColor="@color/buttonRed2"
                android:endColor="@color/buttonRed3"
                android:gradientRadius="50dp"
                android:type="radial"
/>
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>